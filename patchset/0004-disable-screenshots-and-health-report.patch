From: torvic9 <torvic9@mailbox.org>
Date: Sun, 29 Sep 2019 20:29:55 +0200
Subject: [PATCH] disable screenshots and health report

Signed-off-by: torvic9 <torvic9@mailbox.org>
---
 browser/extensions/moz.build | 1 -
 browser/moz.build            | 4 ----
 browser/moz.configure        | 2 +-
 3 files changed, 1 insertion(+), 6 deletions(-)

diff --git a/browser/extensions/moz.build b/browser/extensions/moz.build
index d82083e1c5..a53bc25e7e 100644
--- a/browser/extensions/moz.build
+++ b/browser/extensions/moz.build
@@ -7,8 +7,7 @@
 DIRS += [
     'formautofill',
     'fxmonitor',
     'pdfjs',
-    'screenshots',
     'webcompat',
     'report-site-issue'
 ]
diff --git a/browser/moz.build b/browser/moz.build
index 15e11f45ff..b9c003e03c 100644
--- a/browser/moz.build
+++ b/browser/moz.build
@@ -28,12 +28,8 @@ DIRS += [
 
 if CONFIG['MAKENSISU']:
     DIRS += ['installer/windows']
 
-TEST_DIRS += [
-    'tools/mozscreenshots',
-]
-
 DIST_SUBDIR = 'browser'
 export('DIST_SUBDIR')
 
 # These defines are read in firefox.js
diff --git a/browser/moz.configure b/browser/moz.configure
index 3057a5040c..d125f3512c 100644
--- a/browser/moz.configure
+++ b/browser/moz.configure
@@ -4,9 +4,9 @@
 # License, v. 2.0. If a copy of the MPL was not distributed with this
 # file, You can obtain one at http://mozilla.org/MPL/2.0/.
 
 imply_option('MOZ_PLACES', True)
-imply_option('MOZ_SERVICES_HEALTHREPORT', True)
+imply_option('MOZ_SERVICES_HEALTHREPORT', False)
 imply_option('MOZ_SERVICES_SYNC', True)
 imply_option('MOZ_DEDICATED_PROFILES', True)
 imply_option('MOZ_BLOCK_PROFILE_DOWNGRADE', True)
 
